@model IEnumerable<Daothithuylinhproject2_2210900036.Models.CartItem>

@{
    ViewBag.Title = "Giỏ hàng";
}

<h2>Giỏ hàng</h2>

<table class="table">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Giá</th>
            <th>Số lượng</th>
            <th>Tổng</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.TenSP</td> <!-- Tên sản phẩm -->
                    <td>@item.GiaBan.ToString("C")</td> <!-- Giá bán -->
                    <td>
                        @using (Html.BeginForm("UpdateQuantity", "ShoppingCart", FormMethod.Post))
                        {
                            @Html.Hidden("maSP", item.MaSP) <!-- Mã sản phẩm -->
                            @Html.TextBox("soLuong", item.SoLuong, new { @class = "form-control", @style = "width:60px;" })
                            <input type="submit" value="Cập nhật" class="btn btn-primary" />
                        }
                    </td>
                    <td>@(item.GiaBan * item.SoLuong)</td> <!-- Tổng tiền -->
                    <td>
                        @Html.ActionLink("Xóa", "RemoveFromCart", new { maSP = item.MaSP }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">Giỏ hàng trống</td>
            </tr>
        }
    </tbody>
</table>

<p>
    Tổng tiền: @Model.Sum(i => i.GiaBan * i.SoLuong).ToString("C") <!-- Tổng tiền của giỏ hàng -->
</p>

<a href="@Url.Action("Checkout", "ShoppingCart")" class="btn btn-success">Thanh toán</a>

<!-- Phần thêm sản phẩm vào giỏ hàng -->
<h3>Thêm sản phẩm vào giỏ hàng</h3>
@using (Html.BeginForm("AddToCart", "ShoppingCart", FormMethod.Post))
{
    <div class="form-group">
        <label for="maSanPham">Mã sản phẩm:</label>
        @Html.TextBox("maSanPham", null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="tenSanPham">Tên sản phẩm:</label>
        @Html.TextBox("tenSanPham", null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="giaBan">Giá bán:</label>
        @Html.TextBox("giaBan", null, new { @class = "form-control", type = "number", step = "0.01" })
    </div>
    <div class="form-group">
        <label for="soLuong">Số lượng:</label>
        @Html.TextBox("soLuong", 1, new { @class = "form-control", type = "number" })
    </div>
    <div class="form-group">
        <label for="anh">Ảnh sản phẩm:</label>
        @Html.TextBox("anh", null, new { @class = "form-control" })
    </div>
    <input type="submit" value="Thêm vào giỏ hàng" class="btn btn-primary" />
}
