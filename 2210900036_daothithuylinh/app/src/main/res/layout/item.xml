<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Ảnh sản phẩm -->

    <TextView
        android:id="@+id/txtMaSP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mã sản phẩm"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="16sp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tên sản phẩm -->
    <TextView
        android:id="@+id/txtTenSP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tên sản phẩm"
        android:textColor="#009688"
        android:textStyle="bold"
        android:textSize="16sp"

        app:layout_constraintTop_toBottomOf="@id/txtMaSP"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Giá sản phẩm -->
    <TextView
        android:id="@+id/txtGiaSP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Giá: 0 VNĐ"
        android:textColor="#FF5722"
        android:textSize="14sp"
        android:textStyle="bold"

        app:layout_constraintTop_toBottomOf="@id/txtTenSP"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/txtSoLuong"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Số lượng: 0"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/txtGiaSP"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Đơn giá -->
    <TextView
        android:id="@+id/txtDonGia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Đơn giá: 0 VNĐ"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/txtSoLuong"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Thành tiền -->
    <TextView
        android:id="@+id/txtThanhTien"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Thành tiền: 0 VNĐ"
        android:textColor="#FF5722"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txtDonGia"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>